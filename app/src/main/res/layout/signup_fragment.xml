<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/spn_type"
            android:layout_width="@dimen/spinner_width"
            android:layout_height="wrap_content"
            android:entries="@array/account_type">
        </Spinner>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ln_individual"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/phone_number_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txt_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:textSize="@dimen/form_text_size"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/first_name_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txt_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:textSize="@dimen/form_text_size"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/last_name_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txt_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:textSize="@dimen/form_text_size"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:textSize="@dimen/form_text_size"/>

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spn_sex"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:entries="@array/sex">
            </Spinner>

            <android.support.design.widget.TextInputLayout
            android:id="@+id/dob_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

            <EditText
                android:id="@+id/txt_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Date of Birth"
                android:textSize="@dimen/form_text_size"/>
        </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txt_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Nationality"
                    android:textSize="@dimen/form_text_size"/>
            </android.support.design.widget.TextInputLayout>


            <Spinner
                android:id="@+id/spn_id_type"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:entries="@array/id_type">
            </Spinner>

            <TextView
                android:id="@+id/txt_select_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select ID"/>

            <ImageView
                android:id="@+id/img_id"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/blank_id"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_number_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txt_id_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="ID Number"
                    android:textSize="@dimen/form_text_size"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_submit2"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textColor="#FFF"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="Submit"/>
        </LinearLayout>
    </ScrollView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ln_non_individual_sme"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Next Of Kin Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/activity_horizontal_margin"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txt_next_of_kin_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Next Of Kin Name"
                    android:textSize="@dimen/form_text_size"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txt_next_of_kin_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Next Of Kin Contact"
                    android:textSize="@dimen/form_text_size"/>

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location"
                    android:textSize="@dimen/form_text_size"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/txt_select_business_licence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="Upload Business Licence"/>

            <ImageView
                android:id="@+id/img_business_licence"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/blank_licence"/>

            <TextView
                android:text="Business Owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/activity_horizontal_margin"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txt_company_contact_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textSize="@dimen/form_text_size"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txt_company_contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:textSize="@dimen/form_text_size"/>

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spn_owner_id_type"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:entries="@array/id_type">
            </Spinner>

            <TextView
                android:id="@+id/txt_owner_select_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="Select ID"/>

            <ImageView
                android:id="@+id/img_owner_id"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/blank_id"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/owner_id_number_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/txt_owner_id_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="ID Number"
                    android:textSize="@dimen/form_text_size"/>

            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textColor="#FFF"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="Submit"/>

        </LinearLayout>
        </ScrollView>
    </LinearLayout>


</ScrollView>